<div class="product" id={{id}}>
    <div class="product-image-container">
        <img class="product-image" src="/images/{{image}}1.jpg" alt="">
    </div>
    <p>{{name}}</p>
    <button class="add-to-cart" data-id="{{id}}">
        Add to Cart
    </button>
</div>
<div id="product-details">
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Shipping: ${{shipping}}</p>
</div>