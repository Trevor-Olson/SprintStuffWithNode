{{#if filters}}
    <h1 id="page-title">{{category}} {{type}} Products</h1>
    {{else}}
        <h1 id="page-title">All Products</h1>
{{/if}}

<div id="product-navigation">
    <p class="product-navigation-titles">Racing Categories</p>
    <input type="checkbox" onclick="editUrlParameter('category', 'Winged')"
    id="Winged">
    <label>Winged Sprint Cars</label><br>
    <input type="checkbox" onclick="editUrlParameter('category', 'Non-Winged')"
    id="Non-Winged">
    <label>Non-Winged Sprint Cars</label>
    <p class="product-navigation-titles">Type of Products</p>
    <input type="checkbox" onclick="editUrlParameter('type', 'Clothing')"
    id="Clothing">
    <label>Clothing</label><br>
    <input type="checkbox" onclick="editUrlParameter('type', 'Hand-Painted')"
    id="Hand-Painted">
    <label>Hand-Painted</label>
    {{#if filters}}
        <p class="product-navigation-titles" id="clear-filters" 
            onclick="removeUrlParameters()">Clear All Filters</p>
    {{/if}}
</div>

<div class="product-listing">
    {{#each products}}
    <div class="product" id={{product_id}} category={{category}} type={{type}}>
        <a href="/p/{{product_id}}">
            <div class="product-image-container">
                <img class="product-image" 
                    src="/images/products/{{category}}/{{type}}/{{image}}/1.jpg" 
                    alt="">
            </div>
        </a>
        <p>{{name}}</p>
    </div>
    {{/each}}
</div>